

<img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
<%= link_to "Add New Service", new_service_path %>
<%= link_to "Back", services_path %>

<h1> Hello
<%= @user.first_name %>
</h1>

<h3> Bio: </h3>
<%= @user.bio %>

<%# mapbox %>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


  <% Service.all.each do |service| %>

    <% if service.user.id == @user.id %>

    <div class=“card-service”>
      <img src=“https://kitt.lewagon.com/placeholder/users/arthur-littm” />
      <div class=“card-service-infos”>
        <div>
          <h3><%= service.brand %> </h3>
        </div>
        <h4 class=“card-service-pricing”>Rating: </h4>
        <img src=“https://kitt.lewagon.com/placeholder/users/krokrob” class=“card-service-user avatar-bordered” />
      </div>
    <% end %>
  <% end %>
</div>
