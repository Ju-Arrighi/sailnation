  <div class="services-banner" style="background-image: linear-gradient(-225deg, rgba(0,71,198,0.1) 80%, rgba(0,36,61,0.1) 93%), url('https://res.cloudinary.com/yuhri/image/upload/v1630005711/bannerservices_ednxzw.jpg');">
    <h1> FIND A SERVICE </h1>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query"  />
        <button name="button" type="submit" class="btn btn-flat">
           <i class="fas fa-search"></i> Search
         </button>
      </div>
    <% end %>
  </div>  
  </div>

  <div class="centered">
    <section class="thumbs">
      <% @services.each do |service| %>
        <article class="thumb">
            <picture class="thumbnail">
              <a href="<%= service_path(service.id) %>"><img src="<%= service.thumbnail %>" class="thumb-service-container-image" /></a>
            </picture>
            <div class="thumb-content">
              <ul>
                <li><p><%= service.brand %></p>
                <li><p><%= service.part %></p>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob"  class="avatar-bordered" />
             </ul>
              <h6><%= service.description %></h6>
            </div>
         </article>
       <% end %>
    </section>
  </div>

